$preformatted-background-color = #1d1f21

.log-styles
  code
    padding(3px)
    font(monospace, inherit)
    background-color: $preformatted-background-color
    border-radius: 4px
    word-break: break-all
    display: inline-block
    color: get-color('true-white')
    position: relative

    span
      font(inherit)

  pre
    margin(20px 0)
    font($size:1em)

    code
      padding(20px)
      size(100% null)
      overflow(auto null)
      word-wrap: normal
      box-sizing: border-box
      display: block
      -webkit-overflow-scrolling: touch

  .MathJax
    padding(4px)
    background-color: $preformatted-background-color
    border-radius: 4px

    span
      font($size:16px)
      color: get-color('true-white')

      +screen('>=phablet')
        font($size:18px)

  .MathJax_Display
    margin(20px 0)

    .MathJax
      padding(20px)
      size(100% null)
      overflow(scroll null)
      text-align: center
      word-wrap: normal
      box-sizing: border-box
      display: block
      -webkit-overflow-scrolling: touch
