main.playground
  flex-block('center' 50px 50px, 'center' 50px 50px)
  auto-fit()

  section.bio
    max-width: 400px
    text-align: left

    h1,
    h2
      transform: translate3d(0, 30px, 0)
      opacity: 0.0

      +transition()
        transition: opacity 0.4s ease-out 0.2s, transform 0.4s ease-out 0.2s

    h3
      transform: translate3d(0, 30px, 0)
      opacity: 0.0

      +transition()
        transition: opacity 0.4s ease-out, transform 0.4s ease-out

    aside
      margin: 10px 0
      opacity: 0.0

      +transition()
        transition: opacity 0.4s ease-out 0.6s

    +state('active')
      h1,
      h2,
      h3,
      aside
        transform: translate3d(0, 0, 0)
        opacity: 1.0

    h2
      font-family: $font-family-header
      font-size: 2.5em
      font-weight: $font-weight-header-light
      line-height: 1.0em
      text-align: left
      color: #fff
      display: inline-block

      +screen('tablet')
        font-size: 3.75em
        line-height: 1.2em

    h3
      font-family: $font-family-header
      font-size: 2.25em
      font-weight: $font-weight-header-normal
      text-align: left
      line-height: 1.2em
      color: #666
      display: block
