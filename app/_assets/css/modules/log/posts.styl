section.results
  summary
    margin(0 auto)
    size(100% null)
    max-size(980px null)
    text-align: center
    display: block
    position: relative

    p
      line-height: 2em

section.posts
  summary.post
    transition(transform opacity, 0.4s, ease-out)
    margin(40px auto)
    width: 100%
    max-width: 980px
    display: block
    position: relative

    +state('hidden', true)
      transform: translate3d(0, 30px, 0)
      opacity: 0.0

    +state('visible')
      transform: translate3d(0, 0, 0)
      opacity: 1.0

    a.number-tag
      edge(0 null null -40px)
      position: absolute

    h1
      margin(0 0 15px)
      width: auto
      max-width: 100%
      font-family: $font-family-header
      font-size: 2.25em
      font-weight: $font-weight-header-light
      line-height: 1.2em
      text-align: left
      color: #fff
      display: inline-block
      position: relative

      +screen('tablet')
        max-width: 80%
        font-size: 3.125em

    .content
      margin(20px 0)

  hr
    margin(60px 0)
    width: 40%
    border: 0
    height: 1px
    background: rgba(255, 255, 255, 0.03)

  span.date
    font-family: $font-family-content
    font-weight: $font-weight-header-normal
    font-size: 1em
    color: #666
    display: block
    line-height: 1.2em
