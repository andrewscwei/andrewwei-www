nav#nav
  align('left', 'top', 'fixed')
  size(auto 100%)
  transition(transform, 0.2s, ease-out)
  background-color: transparent
  z-index: 20

  +state('collapsed', true)
    transform: translate3d(-($nav-width), 0, 0)

  +state('expanded')
    transform: translate3d(0, 0, 0)

  section.controls
    align('left' $nav-width null, 'top' $nav-offset-y null, 'absolute')
    size($menu-button-width auto)

    button.menu
      z-index: 1

      svg
        pointable(false)

    button.return
      transform: translate3d(-$menu-button-width, 0, 0)
      opacity: 0.0
      z-index: 0

    +state('returnable')
      button.return
        transform: translate3d(0, 0, 0)
        opacity: 1.0

  section.panel
    align('left', 'top', 'absolute')
    size($nav-width 100%)
    background-color: #fff

    ol
      align('left', 'top', 'absolute')
      size(100% auto)
      padding(60px 0)

      li
        padding(5px 20px)
        size(100% null)
        font(null, 1em, $font-weight-content-normal)
        transition(opacity, border-left-color, 0.2s, ease-out)
        color: #000
        border-left: 4px inset rgba(0, 0, 0, 0)
        display: block
        position: relative

        +state('active')
          border-left: 4px inset rgba(0, 0, 0, 1)

      a
        +state('hover')
          text-decoration: none

          li
            opacity: 0.6

    aside
      align('left', 'bottom', 'absolute')
      padding(40px 30px)
      size(100% auto)

      img.gravatar
        margin(10px '' '' 0)
        size(60px, true)
        display: inline-block
        position: relative

      a
        &.social
          margin(10px 0)

          &:not(:last-child)
            margin-right: 8px

      p
        font-size: 0.875em
        color: #000
